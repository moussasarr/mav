
<div class="row">
    <div class="col-lg-8 col-md-offset-2" >
      <p id="notice"><%= notice %></p>

      <h1 style="margin-top:10px;margin-left: 30px;color: #2CA4B0;"> Products<hr></h1><br/>
      <% @products.each_slice(4) do |group| %>
        <div class="row" style="margin-top:10px;margin-left: 30px;">
          <% group.each do |item| %>
            <div class="card col-sm-3" >
              <%= image_tag item.image, :class => "card-img-top" %>
              <div class="card-body">
                <h4 class="card-title"><%= item.title %></h4>
                <a href=<%='products/' + item.id.to_s %>  class="btn btn-primary">View Product</a><br/><br/><br/>
              </div>
              <br/>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
</div>





