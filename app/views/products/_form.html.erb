<%= form_for @product, url: products_path, html: { multipart: true } do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, ['Hose Assemblies', 'Doughnuts', 'Couplings', 'Supermax']%>
  </div>


  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :base_price_one, '1" Base Price' %>
    <%= f.number_field :base_price_one, class: :text_field, step: :any%>
  </div>
  <div class="field">
    <%= f.label :base_price_oneofive, '1.5" Base Price' %>
    <%= f.number_field :base_price_oneofive, class: :text_field, step: :any%>
  </div>
  <div class="field">
    <%= f.label :base_price_two, '2" Base Price' %>
    <%= f.number_field :base_price_two, class: :text_field, step: :any%>
  </div>
  <div class="field">
    <%= f.label :base_price_twofive, '2.5" Base Price' %>
    <%= f.number_field :base_price_twofive, class: :text_field, step: :any%>
  </div>

  <div class="field">
    <%= f.label :base_price_three, '3" Base Price' %>
    <%= f.number_field :base_price_three, class: :text_field, step: :any%>
  </div>

  <div class="field">
    <%= f.label :base_price_four, '4" Base Price' %>
    <%= f.number_field :base_price_four, class: :text_field, step: :any%>
  </div>

   <div class="field">
    <%= f.label :additional_foot_price, "Additional footage($/inch)" %>
    <%= f.number_field :additional_foot_price, class: :text_field, step: :any%>
  </div>

  <div class="field">
    <%= f.label :constant_price, "Constant Price (Enter only if Supermax)" %>
    <%= f.number_field :constant_price, class: :text_field, step: :any%>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
